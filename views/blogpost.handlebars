<div id="singlePost">
  <div>
    <div id="postTitle">
      <div>
        {{blogpost.title}}
      </div>
      <div>
        {{blogpost.user.username}}
      </div>
    </div>
    <hr />
    <div id="postBody">
      {{blogpost.body}}
    </div>
  </div>
</div>
    <div id="postComments">
      {{#each blogpost.comments}}
      <div id="singleComment">
        {{commented_by}} commented:
        <hr />
        {{body}}
        </div>
        <div>
      </div>
      {{/each}}
    </div>